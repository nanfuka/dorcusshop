@model IEnumerable<Boutiq_api.Models.Boutiq>

@{
    ViewData["Title"] = "Home Page";
}
<style>
    .card {
        background-color: rgb(235, 179, 188);
    }

    .bulooka {
        display: flex;
    }

    .rowtwo {
        margin-top: 5%;
    }

    img {
        margin-top: 5%;
        margin-left: 5%;
    }

    h1 {
        text-align: center;
        color: blue;
    }

    .totals {
        background-color: black;
        color: white;
    }
</style>
<h1> Jeans In Shop </h1>
<div class="totals row">
    <a class="btn btn-sm  rounded-0 text-uppercase">
        <i class="fas fa-plus-circle"></i> Total Number: @ViewBag.depositedOn
    </a>

    <a class="btn btn-sm rounded-0 text-uppercase">
        <i class="fas fa-plus-circle"></i> Dresses worth: Ushs.@Model.Sum(i => i.SalePrice)
    </a>
</div>
<h1> The jeans we have in store </h1>
<div class="row">
    @foreach (var employee in Model)
    {


        <div class="card col-md-4">

            <img src="~/images/@employee.itemImage" height="70%" width="90%">
            <p class="rowtwo">
                <a asp-action="Edit" asp-route-id="@employee.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@employee.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
            </p>
        </div>
        @* </div> *@
    }
</div>
